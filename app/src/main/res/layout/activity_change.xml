<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.stewilondanga.minform.ChangeActivity"
    android:background="@color/colorTextIcons">

    <Button
        android:id="@+id/findCauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryLight"
        android:text="Find a Cause" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/change" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/findCauseButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:text="Welcome and thank you for choosing this charity organization. You are required to choose a cause, declare the time you devote and choose how to help."
        android:textSize="20dp"
        android:background="@color/colorPrimary" />

</RelativeLayout>
